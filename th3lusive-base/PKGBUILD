# Maintainer: th3lusive <th3lusive@yahoo.com>
pkgname=th3lusive-base
pkgver=1
pkgrel=1
pkgdesc="Base system configuration for th3lusive systems"
arch=('any')
url="https://gitlab.com/th3lusive/pkgbuilds"
license=('MIT')
groups=('th3lusive')
install=th3lusive-base.install
provides=('vim' 'vi')
conflicts=('vim' 'vi')
depends=(
    'bash'
    'bzip2'
    'coreutils'
    'cryptsetup'
    'device-mapper'
    'dhcpcd'
    'diffutils'
    'e2fsprogs'
    'file'
    'filesystem'
    'findutils'
    'gawk'
    'gcc-libs'
    'gettext'
    'glibc'
    'grep'
    'gzip'
    'inetutils'
    'iproute2'
    'iputils'
    'jfsutils'
    'less'
    'licenses'
    'logrotate'
    'lvm2'
    'man-db'
    'man-pages'
    'mdadm'
    'nano'
    'netctl'
    'pacman'
    'pciutils'
    'perl'
    'procps-ng'
    'psmisc'
    'reiserfsprogs'
    's-nail'
    'sed'
    'shadow'
    'sysfsutils'
    'systemd-sysvcompat'
    'tar'
    'texinfo'
    'usbutils'
    'util-linux'
    'which'
    'xfsprogs'
    'linux'
    'linux-lts'
    'exfat-utils'
    'zsh'
    'grml-zsh-config'
    'sudo'
    'xorg-server'
    'lightdm'
    'lightdm-webkit2-greeter'
    'lightdm-webkit-theme-litarvan'
    'neovim'
    'python-neovim'
    'python2-neovim'
    'ripgrep'
    'exa'
    'bat'
    'fd'
    'dialog'
    'git'
    'trash-cli'
    'ranger'
    'ncmpcpp'
    'mpd'
    'pulseaudio'
    'pulseaudio-alsa'
)

source=(
    'th3lusive-base.sh'
    'th3lusive-base.install'
    'fontconfig-local.conf'
    'pkglist.hook'
    '00-keyboard.conf'
    '30-touchpad.conf'
    'lightdm-webkit2-greeter.conf'
    'lightdm.conf'
    'unoffical-repos'
)

package() {
    install -dm 0755 "$pkgdir/usr/bin"
    ln -s /usr/bin/nvim "$pkgdir/usr/bin/vim"
    ln -s /usr/bin/nvim "$pkgdir/usr/bin/vi"

    install -Dm 0644 lightdm.conf "$pkgdir/etc/lightdm/lightdm.conf"
    install -Dm 0644 lightdm-webkit2-greeter.conf "$pkgdir/etc/lightdm/lightdm-webkit2-greeter.conf"
    install -Dm 0644 fontconfig-local.conf "$pkgdir"/etc/fonts/local.conf
    install -Dm 0644 unoffical-repos "$pkgdir"/etc/pacman.d/unoffical
    install -Dm 0644 pkglist.hook "$pkgdir" /usr/share/libalpm/hooks/pkglist.hook
    install -Dm 0644 00-keyboard.conf "$pkgdir/etc/X11/xorg.conf.d/00-keyboard.conf"
    install -Dm 0644 30-touchpad.conf "$pkgdir/etc/X11/xorg.conf.d/30-touchpad.conf"
    install -Dm 0755 th3lusive-base.sh "$pkgdir/etc/profile.d/th3lusive-base.sh"
}
