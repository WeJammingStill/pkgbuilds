# Maintainer: th3lusive <th3lusive@yahoo.com>
pkgname=pac
pkgver=0.2
pkgrel=1
pkgdesc="FZF wrapper for pacman and AUR helper."
arch=('any')
license=('GPL')
depends=('fzf' 'expac' 'curl')
optdepends=('yay: Support for AUR packages.')
provides=($pkgname)
conflicts=($pkgname)
source=('pac')
md5sums=('SKIP')
package(){
    install -d "$pkgdir/usr/bin/"
    install -Dm755 pac "$pkgdir/usr/bin/pac"
}
