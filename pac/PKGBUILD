# Maintainer: th3lusive <th3lusive@yahoo.com>
pkgname=pacfzf
pkgver=0.1
pkgrel=2
pkgdesc="FZF wrapper for pacman and aurutils."
arch=('any')
license=('GPL')
depends=('fzf' 'expac' 'curl' )
optdepends=('aurutils: helper tools for the arch user repository')
provides=($pkgname)
conflicts=($pkgname)
source=('pacfzf')
md5sums=('SKIP')
package(){
    install -d "$pkgdir/usr/bin/"
    install -Dm755 pacfzf "$pkgdir/usr/bin/pacfzf"
}
